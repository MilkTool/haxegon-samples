<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta 
    title="Moving Hexagon" 
    package="com.haxegon.movinghexagon" 
    version="1.0.0" 
    company="Your name here" 
  />
  
  <app swf-version="17.0" if="flash"/>
	<app 
      main="haxegon.Load"
      path="bin" 
      file="bitmapfonts" 
   />
   
	<window
      width="768" height="480" unless="mobile" 
   ></window>
   
	<window
      fps="60"
      background="0x000000"
      orientation="landscape"
      hardware="true"
      vsync="true"
   ></window>
   
	<window
      antialiasing="0" 
      if="cpp"
   ></window>
   
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="haxegon" />
	
	<assets path="data/sounds/mp3" rename="data/sounds" exclude="*.txt" if="flash"/> 
	<assets path="data/sounds/ogg" rename="data/sounds" exclude="*.txt" unless="flash"/> 
	<assets path="data/text" exclude="place txt and csv files here.txt"/>
	
	<assets path="data" exclude="*.svg|*.mp3|*.ogg|*.wav|*.txt"/>
	
	<icon path="data/graphics/icon/play.svg"/>
</project>